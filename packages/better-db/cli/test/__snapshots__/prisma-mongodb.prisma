generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id        String    @id @map("_id")
  title     String
  content   String
  published Boolean?  @default(false)
  createdAt DateTime
  comments  Comment[]

  @@map("post")
}

model Author {
  id    String @id @map("_id")
  name  String
  email String

  @@unique([email])
  @@map("author")
}

model Comment {
  id      String @id @map("_id")
  content String
  postId  String
  post    Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("comment")
}

model Tag {
  id   String @id @map("_id")
  name String

  @@unique([name])
  @@map("tag")
}