generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String    @id
  title     String    @db.Text
  content   String    @db.Text
  published Boolean?  @default(false)
  createdAt DateTime
  comments  Comment[]

  @@map("post")
}

model Author {
  id    String @id
  name  String @db.Text
  email String

  @@unique([email])
  @@map("author")
}

model Comment {
  id      String @id
  content String @db.Text
  postId  String
  post    Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("comment")
}

model Tag {
  id   String @id
  name String

  @@unique([name])
  @@map("tag")
}